{
  "icons": {
    "src": "_src/assets/icons/*.*",
    "dest": "public/",
    "dist": "docs/"
  },
  "html": {
    "src": "_src/templates/*.html",
    "partials": "_src/templates/partials/",
    "dest": "public/",
    "dist": "docs/"
  },
	"scss": {
		"src": "_src/assets/scss/**/*.scss",
		"dest": "public/assets/css/",
    "dist": "docs/assets/css/"
	},
	"js": {
		"src": [
      "_src/assets/js/main.js",
      "_src/assets/js/model.js",
      "_src/assets/js/fill-phone.js",
      "_src/assets/js/fill-name.js",
      "_src/assets/js/fill-github.js",
      "_src/assets/js/fill-mail.js",
      "_src/assets/js/fill-linkedin.js",
      "_src/assets/js/fill-colors.js",
      "_src/assets/js/collapsibles.js",
      "_src/assets/js/profile-picture.js",
      "_src/assets/js/share-twitter.js",
      "_src/assets/js/reset.js",
      "_src/assets/js/fill-model.js",
      "_src/assets/js/cache.js",
      "_src/assets/js/arrows.js",
      "_src/assets/js/send-back.js"
		],
		"dest": "public/assets/js/",
    "dist": "docs/assets/js/"
	},
	"images": {
    "src": "_src/assets/images/**/*.{gif,jpg,jpeg,JPG,JPEG,png,svg}",
    "dest": "public/assets/images/",
    "dist": "docs/assets/images/"
  },
  "watch": {
   "html": "_src/**/*.html"
  }
}
